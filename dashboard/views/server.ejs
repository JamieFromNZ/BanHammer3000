<%- include("partials/header", { isLoggedIn: isLoggedIn, user: user }) %>

    <div class="container">
        <h1>Welcome, <%= user.username %>!</h1>
        <img src="<%= user.avatarURL %>" alt="User Avatar">

        <h2>Guild: <%= guild.name %>
        </h2>

        <h3>Bot Settings</h3>
        <form method="POST" action="/dashboard/<%= guild.id %>/settings">
            <h4>Levelling</h4>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="myRadio" id="trueRadio" value="true" <%= guildDB.levellingEnabled ? 'checked' : '' %>>
                <label class="form-check-label" for="trueRadio">
                  Enabled
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="myRadio" id="falseRadio" value="false" <%= !guildDB.levellingEnabled ? 'checked' : '' %>>
                <label class="form-check-label" for="falseRadio">
                  Disabled
                </label>
              </div>
            <button type="submit" class="btn btn-primary">Save Settings</button>
        </form>
    </div>

    <%- include('./partials/footer.ejs') %>